<templates id="template" xml:space="preserve">

    <t t-name="ClientSelectionPopup">
        <div role="dialog" class="modal-dialog">
            <div class="popup popup-client">
                <p class="title">Type partners phone number</p>
                <div class="body">
                    <div class="popup_phone_input">
                        <input class='detail client-phone' name='phone' placeholder='+79171212123'></input>
                    </div>
                    <button class="btn btn-primary check_partner_presence" name="check_partner_presence" type="object">
                        <t t-if="widget.options.mode &amp;&amp; widget.options.mode == 'referrer'">
                            Find Referrer
                        </t>
                        <t t-else="">
                            Find Client
                        </t>
                    </button>
                    <div class="popup_name_input">
                        <input class='detail client-name' name='name'/>
                    </div>
                </div>
                <div class="footer">
                    <div class="button confirm">
                        Ok
                    </div>
                    <div class="button cancel">
                        Cancel
                    </div>
                </div>
            </div>
        </div>
    </t>

    <t t-extend="ActionpadWidget">
        <t t-jquery='button:first' t-operation="after">
            <button t-attf-class='button set-referrer #{ ( widget.pos.get_referrer() and widget.pos.get_referrer().name.length > 10) ? "decentered" : "" }' >
                <i class='fa fa-user' role="img" aria-label="Referrer" title="Referrer"/>
                <t t-if="widget.pos.get_referrer()">
                    <t t-esc="widget.pos.get_referrer().name" />
                </t>
                <t t-if="!widget.pos.get_referrer()">
                    Referrer
                </t>
            </button>
        </t>
    </t>

</templates>
