<odoo>

     <record id="product_normal_form_view_supplementary" model="ir.ui.view">
        <field name="name">product.product.form.inherited</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='purchase_ok']/.." position="after">
                <div>
                    <field name="duration"/>
                    <label for="duration"/>
                </div>
            </xpath>
        </field>
    </record>

</odoo>