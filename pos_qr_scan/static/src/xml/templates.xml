<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="QrButton">
        <div class='control-button'>
            <i class='fa fa-qrcode' /> QR Scan
        </div>
    </t>

    <t t-name="QrScanPopupWidget">
        <div class="modal-dialog">
            <div class="popup popup-qr_scan">
                <div class="preview-container">
                    <video  autoplay="autoplay" id="preview" class="active video_preview" style="transform: scaleX(-1);">
                        Tap to start scanning
                    </video>
                </div>
                <div class="transparent_sidebar">
                    <div class="title">
                        <p>QR Scanning</p>
                    </div>
                    <div class="body">
                        <p>Cameras:</p>
                        <p></p>
                    </div>
                </div>
                <div class="note">
                    <p> Tap on the video to quit </p>
                </div>
            </div>
        </div>
    </t>

</templates>
