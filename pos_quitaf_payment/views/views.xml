<odoo>
    <!-- ACCOUNT JOURNAL -->
    <record id="view_account_journal_pos_user_form" model="ir.ui.view">
        <field name="name">pos_quitaf_payment.account_journal_form</field>
        <field name="model">account.journal</field>
        <field name="inherit_id" ref="point_of_sale.view_account_journal_pos_user_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook[last()]/page[last()]" position="inside">
                <group string="Quitaf">
                    <field name="quitaf_payment_method"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
