<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="point_of_sale.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='available_in_pos']" position="after">
                <field name="second_product_name" attrs="{'invisible': [('available_in_pos', '=', False)]}"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_pos_config_form">
        <field name="name">pos.config.form.view.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='receipt_header']/../../../.." position="before">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="show_second_product_name_in_receipt"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_second_product_name_in_receipt"/>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="show_discount_in_receipt"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="show_discount_in_receipt"/>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="custom_ticket"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="custom_ticket"/>
                        <div class="content-group mt16" attrs="{'invisible' : [('custom_ticket', '=', False)]}">
                            <div>
                                <label string="Ticket " for="custom_ticket_id" class="col-md-2 o_light_label"/>
                                <field name="custom_ticket_id" attrs="{'invisible' : [('custom_ticket', '=', False)],'required': [('custom_ticket', '=', True)]}"/>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane" attrs="{'invisible' : [('iface_print_via_proxy', '=', False)]}">
                        <field name="custom_xml_receipt"/>
                    </div>
                    <div class="o_setting_right_pane" attrs="{'invisible' : [('iface_print_via_proxy', '=', False)]}">
                        <label for="custom_xml_receipt"/>
                        <div class="content-group mt16" attrs="{'invisible' : [('custom_xml_receipt', '=', False)]}">
                            <div>
                                <label string="Receipt " for="custom_ticket_id" class="col-md-2 o_light_label"/>
                                <field name="custom_xml_receipt_id" attrs="{'required': [('custom_xml_receipt', '=', True),('iface_print_via_proxy', '=', True)]}"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>

    <record id="pos_custom_receipt_form_view" model="ir.ui.view">
        <field name="name">pos.custom_receipt.view.form</field>
        <field name="model">pos.custom_receipt</field>
        <field name="arch" type="xml">
            <form string="Custom Receipt">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="image"/>
                        <field name="type" required="1"/>
                        <field name="qweb_template" widget="ace" options="{'mode': 'xml'}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
