<templates id="pos_esign_request_template" xml:space="preserve">

    <t t-extend="AttendeeLine">
        <t t-jquery="tr.client-line" t-operation="append">
            <td class="esign">
                <t t-esc='!!(attendee.signed_terms) &amp;&amp; "&#10004;" || ""'/>
            </td>
        </t>
    </t>

    <t t-extend="AttendeeListScreenWidget">
        <t t-jquery="table.client-list thead tr" t-operation="append">
            <td id="client-line-esign">E-Sign</td>
        </t>

        <t t-jquery=".button.next" t-operation="before">
            <span id="esign_request" class="button esign" style="right:310px;">
                E-Sign
            </span>
        </t>
    </t>

</templates>
