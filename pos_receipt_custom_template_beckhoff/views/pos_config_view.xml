<odoo>
    <record model="ir.ui.view" id="view_pos_config_form">
        <field name="name">pos.config.form.view.inherit</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='custom_xml_receipt_id']/../../../.." position="after">
                <div class="col-xs-12 col-md-6 o_setting_box">
                    <div class="o_setting_left_pane"  attrs="{'invisible' : [('iface_print_via_proxy', '=', False)]}">
                        <field name="custom_invoice_receipt"/>
                    </div>
                    <div class="o_setting_right_pane" attrs="{'invisible' : [('iface_print_via_proxy', '=', False)]}">
                        <label for="custom_invoice_receipt_id"/>
                        <div class="content-group mt16" attrs="{'invisible' : [('custom_invoice_receipt', '=', False)]}">
                            <div>
                                <label string="Invoice Receipt" for="custom_ticket_id" class="col-md-2 o_light_label"/>
                                <field name="custom_invoice_receipt_id"  attrs="{'required': [('custom_invoice_receipt', '=', True),('iface_print_via_proxy', '=', True)]}"/>
                            </div>
                        </div>
                    </div>
                 </div>
            </xpath>

        </field>
    </record>
</odoo>
