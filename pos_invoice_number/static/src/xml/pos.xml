<templates id="template" xml:space="preserve">

    <t t-extend="PosTicket">
        <t t-jquery='.pos-center-align' t-operation='append'>
            <t t-if="order.invoice_name">
                Invoice: <t t-esc="order.invoice_name"/>
            </t>
        </t>
    </t>

    <t t-extend="XmlReceipt">
        <t t-jquery='t[t-esc*="receipt.name"]' t-operation='after'>
            <t t-if='order.invoice_name'>
                <div>Invoice: <t t-esc='order.invoice_name' /></div>
            </t>
        </t>
    </t>

</templates>
